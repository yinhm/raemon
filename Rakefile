require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name        = "raemon"
    gem.summary     = "Raemon is a Ruby framework for building UNIX daemons."
    gem.description = "Raemon is a Ruby framework for building UNIX daemons."
    gem.email       = "epaulin@gmail.com"
    gem.homepage    = "http://github.com/yinhm/raemon"
    gem.authors     = ["Peter Kieltyka", "Yin Haiming"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
